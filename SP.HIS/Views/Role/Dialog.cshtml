
@{
    ViewBag.Title = "角色编辑";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SP.Models.SYS_ROLE

<form id="dialogForm" method="post" action="#">

    <input name="ID" type="hidden" value="@Model.ID" />
    <input name="Flag" type="hidden" value="@Model.FLAG" />
    <table style="width: 100%; text-align: center">
        <tr>
            <td>
                <label for="RoleNum">
                    角色编码:
                </label>
            </td>
            <td>
                <input class="easyui-textbox" type="text" readonly="readonly" name="ROLENUM" data-options="required:true,missingMessage:'角色编码不能为空'" value="@Model.ROLENUM" />
            </td>
        </tr>
        <tr>
            <td>
                <label for="RoleName">
                    角色名称:
                </label>
            </td>
            <td>
                <input id="Department" class="easyui-textbox" type="text" name="ROLENAME" data-options="required:true,missingMessage:'角色名称不能为空',validType:['chinese','length[2,20]']" value="@Model.ROLENAME" />

            </td>

        </tr>
        <tr>
            <td>
                <label for="Disc">
                    角色描述:
                </label>
            </td>
            <td>
                @*<input class="easyui-textbox" name="Disc" data-options="multiline:true,required:true,missingMessage:'角色描述不能为空',validType:['unnormal','length[2,200]']" style="height:60px" value="@Model.Disc" />*@
            </td>
        </tr>
    </table>
</form>
<script src="~/Scripts/Easyui/easyui-validate-extend.js"></script>
